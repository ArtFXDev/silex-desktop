{
  "name": "silex-desktop",
  "version": "1.1.0",
  "description": "Silex desktop application",
  "main": "./src/index.js",
  "author": "ArtFX TDs Gang",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "cross-env": "^7.0.3",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.32.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArtFXDev/silex-desktop.git"
  },
  "scripts": {
    "electron": "electron src",
    "start": "cross-env NODE_ENV=development nodemon --watch ./src/**/*.js --exec \"npm run electron\"",
    "build:windows": "electron-builder build --win --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "deploy:windows": "electron-builder build --win --publish always",
    "deploy:linux": "electron-builder build --linux --publish always",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@artfxdev/silex-socket-service": "^1.3.8",
    "auto-launch": "^5.0.5",
    "axios": "^0.24.0",
    "electron-updater": "^4.3.9",
    "find-process": "^1.4.5",
    "os-utils": "^0.0.14",
    "pino": "^7.1.0",
    "pino-pretty": "^7.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "build": {
    "appId": "com.silexdesktop",
    "mac": {
      "category": "public.pipeline.silex-desktop"
    },
    "win": {
      "icon": "./src/assets/images/app.ico"
    },
    "linux": {
      "icon": "./src/assets/images/256x256.png"
    },
    "productName": "silex-desktop",
    "extraResources": [
      "tmp/**/*",
      "data/*.db",
      "build/**/*"
    ],
    "files": [
      "src/**/*"
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "nsis": {
      "allowToChangeInstallationDirectory": false,
      "oneClick": true,
      "shortcutName": "Silex Desktop",
      "installerIcon": "./src/assets/images/app.ico"
    }
  }
}
