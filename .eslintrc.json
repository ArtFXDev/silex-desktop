{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:require-path-exists/recommended"
  ],
  "plugins": ["require-path-exists"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": "warn",
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["electron"]
      }
    ]
  }
}
